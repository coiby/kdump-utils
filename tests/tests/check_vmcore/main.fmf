framework: shell
require:
- makedumpfile

/nfs:
    summary: Check vmcore on NFS server
    environment:
        VMCORE_PATH: /var/tmp/nfsshare/var/crash

/local:
    summary: Check vmcore locally
    environment:
        VMCORE_PATH: /var/crash

/ssh:
    summary: Check vmcore on SSH SERVER
    environment:
        VMCORE_PATH: /var/crash
