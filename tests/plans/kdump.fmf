summary: Kdump tests
discover:
  - name: Setup crashkernel
    how: fmf
    test:
     - setup/default_crashkernel
    where:
      - client
  - name: Setup NFS server
    how: fmf
    test:
     - setup/nfs_server
    where:
      - server
  - name: Panic kernel
    how: fmf
    test:
     - /tests/trigger_crash
    where:
      - client
  - name: Check VM Core
    how: fmf
    test:
     - /tests/check_vmcore
    where:
      - server

provision:
   - name: server
     how: virtual
     image: fedora:40

   - name: client
     how: virtual
     image: fedora:40

prepare:
  # Set root password to log in as root in the console
  - name: Set root password
    how: shell
    script:
      - echo root:kdump | chpasswd

execute:
    how: tmt
